[Unit]
Description=Opsi TFTPD HPA Configuration Service
Wants=network.target
After=network.target

[Service]
Type=forking
ExecStart=/usr/sbin/in.tftpd -vvvvv --listen --address :69 --secure --blocksize 1024 /tftpboot/
PrivateDevices=yes
Restart=on-failure
RestartSec=5
KillMode=process
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target

